
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

@model Category
@{
    var formHeader = Model == null ? "Добавление категории" : "Редактирование категории";
    ViewData["Title"] = formHeader;
}
<form class="form" asp-action="Save" method="post">
    <h3>@formHeader</h3>
    <!--<input asp-for="Id" type="hidden" />-->
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input class="form-control" asp-for="Id" />
    </div>

    <input class="btn btn-success" type="submit" value="Сохранить" />

</form>